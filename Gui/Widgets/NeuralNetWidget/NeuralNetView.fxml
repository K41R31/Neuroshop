<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Neuroshop.Gui.Widgets.NeuralNetWidget.NeuralNetController">
   <children>
      <VBox alignment="CENTER_RIGHT">
         <children>
            <Group>
               <children>
                  <AnchorPane fx:id="splinesPane" />
                  <HBox fx:id="vBoxContainer" alignment="CENTER">
                     <children>
                        <VBox fx:id="inputLayer" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="130.0" spacing="30.0">
                           <padding>
                              <Insets bottom="30.0" top="30.0" />
                           </padding>
                        </VBox>
                        <HBox fx:id="hiddenLayer" />
                        <VBox fx:id="outputLayer" alignment="CENTER" layoutX="140.0" layoutY="10.0" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="130.0" spacing="30.0">
                           <padding>
                              <Insets bottom="30.0" top="30.0" />
                           </padding>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </Group>
            <StackPane fx:id="hdnLayerControl" maxWidth="-Infinity" minWidth="-Infinity" opacity="0.0" prefWidth="160.0" translateY="50.0">
               <children>
                  <ImageView fitHeight="55.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../Ressources/Assets/hiddenLayerPanel.png" />
                     </image>
                  </ImageView>
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <ImageView fx:id="addLayerButton" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#addLayer" onMouseEntered="#addLayerButtonEntered" onMouseExited="#addLayerButtonExited" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../Ressources/Assets/addHdnLayer.png" />
                           </image>
                        </ImageView>
                        <ImageView fx:id="removeLayerButton" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#removeLayer" onMouseEntered="#removeLayerButtonEntered" onMouseExited="#removeLayerButtonExited" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../Ressources/Assets/deleteHdnLayer.png" />
                           </image>
                        </ImageView>
                     </children>
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets top="-30.0" />
               </VBox.margin>
            </StackPane>
            <HBox fx:id="bodyPane" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="0.0" style="-fx-background-color: #2f2f2f; -fx-border-color: #1b1b1b;">
               <children>
                  <Region maxWidth="-Infinity" minWidth="-Infinity" prefWidth="130.0" />
                  <HBox fx:id="menuPane" prefHeight="100.0" prefWidth="200.0" visible="false" />
               </children>
               <VBox.margin>
                  <Insets top="-5.0" />
               </VBox.margin>
            </HBox>
            <StackPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="35.0">
               <children>
                  <ImageView fitHeight="36.0" fitWidth="113.0" onMouseClicked="#toggleMenu" onMouseEntered="#closerPaneEntered" onMouseExited="#closerPaneExited" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../Ressources/Assets/nnOpener.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="closerIcon" disable="true" fitHeight="20.0" fitWidth="40.0" layoutX="86.0" layoutY="10.0" onMouseClicked="#toggleMenu" pickOnBounds="true" preserveRatio="true" scaleY="-1.0">
                     <image>
                        <Image url="@../../../Ressources/Assets/nnOpenerIcon.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
         </children>
      </VBox>
   </children>
</StackPane>
