<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox fx:id="frameBorderRootPane" alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" stylesheets="@borderStyle.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Neuroshop.Gui.Border.BorderController">
   <children>
      <StackPane fx:id="frameBorder" HBox.hgrow="ALWAYS">
         <children>
            <Text disable="true" fill="#979797" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="borderText" text="NEUROSHOP" textAlignment="CENTER" translateX="90.0" StackPane.alignment="CENTER">
               <font>
                  <Font name="LEIXO DEMO" size="22.0" />
               </font>
            </Text>
         </children>
      </StackPane>
      <HBox>
         <children>
            <ImageView fitHeight="30.0" fitWidth="45.0" onMouseClicked="#toggleOptions" pickOnBounds="true" preserveRatio="true" styleClass="optionsButton" />
            <ImageView fitHeight="30.0" fitWidth="45.0" onMousePressed="#minimize" pickOnBounds="true" preserveRatio="true" styleClass="minimizeButton" />
            <ImageView fitHeight="30.0" fitWidth="45.0" onMousePressed="#minMax" pickOnBounds="true" preserveRatio="true" styleClass="minmaxButton" />
            <ImageView fitHeight="30.0" fitWidth="45.0" onMousePressed="#exit" pickOnBounds="true" preserveRatio="true" styleClass="closeButton" />
         </children>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets left="15.0" />
   </padding>
</HBox>
