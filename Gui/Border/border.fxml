<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="frameBorderRootPane" style="-fx-background-color: #222222; -fx-border-color: #181818; -fx-border-insets: -1;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Neuroshop.Gui.Border.BorderController">
   <children>
      <Text disable="true" fill="#979797" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="borderText" text="NEUROSHOP" textAlignment="CENTER" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="3.0">
         <font>
            <Font name="LEIXO DEMO" size="20.0" />
         </font>
      </Text>
      <HBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fitHeight="30.0" fitWidth="45.0" onMouseClicked="#toggleOptions" pickOnBounds="true" preserveRatio="true" styleClass="optionsButton" />
            <ImageView fitHeight="30.0" fitWidth="45.0" onMouseClicked="#minimize" pickOnBounds="true" preserveRatio="true" styleClass="minimizeButton" />
            <ImageView fitHeight="30.0" fitWidth="45.0" onMouseClicked="#minMax" pickOnBounds="true" preserveRatio="true" styleClass="minmaxButton" />
            <ImageView fitHeight="30.0" fitWidth="45.0" onMouseClicked="#exit" pickOnBounds="true" preserveRatio="true" styleClass="closeButton" />
         </children>
      </HBox>
   </children>
</AnchorPane>
